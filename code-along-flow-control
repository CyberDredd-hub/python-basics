#for loop example
for i in range(1, 5):
    print(f'Iteration {i}')
#another way
loop_range = range(1, 5)
for i in loop_range:
    print(f'Iteration {i}')

#for loop in list
fruits = ["apple", "bannana", "cherry",3, 4.5]

for i in fruits:
    print(f'Fruit: {i}')




